<div id="index">

<h1>Tasks</h1>

  <ul>
  <% if @tasks == nil %>
    <p>
       You haven't set any tasks.
    </p>
  <% else %>
    <form method="post">
    <% @tasks.each do |task| %>
      <li> <%= task[0] %> : <%= task[1] %></li>
      <a href="/delete/<%= task[0] %>">Delete Task</a>
      <label><input type="checkbox" name="tasks[]" value="<%= task[0] %>"</label>
    <% end %>
  <% end %>
  <button type="submit" href="complete" name="completed_task" id="completed_task" value="completed task">Update completed task</button>

  </form>
   </ul>


<p id="add_task">
  <form action="new">
    <button type="submit" href="new" name="submit" id="submit" value="New Task">New Task</button>
  </form>
</p>

</div>
