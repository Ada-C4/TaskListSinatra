<html>
  <head>
    <link href="css/main.css" rel="stylesheet">
    <title>Tasks!</title>
    <link rel="shortcut icon" type="image/x-icon" href="./favicon.ico">
  </head>
  <body>
    <h1>Here's a list of tasks</h1>
    <form method="post">
      <table>
        <tr>
          <th>
            Name
          </th>
          <th>
            Description
          </th>
          <th>
            Date
          </th>
          <th>
            Delete?
          </th>
          <th>
            Edit?
          </th>
        </tr>
        <% @tasks.each do |task| %>
          <tr>
            <td>
              <%= task[1] %>
            </td>
            <td>
              <%= task[2] %>
            </td>
            <td>
              <%= task[3] %>
            </td>
            <td>
                <label><input type="checkbox" name="tasks_to_delete[]" value="<%= task[0] %>"></label>
            </td>
            <td>
                <label><input type="radio" name="task_to_edit" value="<%= task[0] %>"></label>
            </td>
          </tr>
        <% end %>
      </table>
      <p>
        <input type="submit" name="submit" value="Delete Checked" onclick="return confirm('Are you sure you want to delete this task?')">
      </p>
      <p>
        <input type="submit" name="submit" value="Edit Selected">
      </p>
    </form>
    <p>
      <a href="new">To add a new task, go here</a>
    </p>

