<img src="unicorn.jpg">
<div class ="todo">
  <h3> Tasks to Do:</h3>
  <ul>
    <% @tasks.each do |task| %>
      <% if task[3] == nil %>
        <li><%= task[0] %>: <%= task[1] %></li>
      <% end %>
    <% end %>
  </ul>
</div>
<div class = "completed">
  <h3>Completed Tasks:</h3>
  <ul>
    <% @tasks.each do |task| %>
      <% if task[3] != nil %>
        <li><%= task[0] %>: <%= task[1] %></li>
      <% end %>
    <% end %>
  </ul>
</div>
