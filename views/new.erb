<h1 class="text-center">Add a task</h1>

<form method="post">
  <div class="form-group">
    <fieldset>
      <label for="task_name">Task: </label>
      <input class="form-control" type="text" id="task_name" name="task_name">
      <br>
      <label for="description">Description: </label>
      <input class="form-control" type="text" id="description" name="description">
      <br>
      <% if @update %>
        <button class="btn" type="submit" name ="submit" value="update">Update</button>
      <% else %>
        <button class="btn" type="submit" name ="submit" value="new"><span class="fa fa-edit"></span> Submit</button>
      <% end %>
    </fieldset>
  </div>
</form>
