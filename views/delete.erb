<div>
  <form method="post">
    <h1>Task List</h1>
      <table class="table table-hover">
        <tr>
          <th>
            delete
          </th>
          <th>
            task
          </th>
          <th>
            description
          </th>
          <th>
            completed
          </th>
        </tr>
        <% @tasks.each do |task| %>
        <tr>
          <td>
           <label><input type="checkbox" name="deleted[]" value="<%= task[0] %>">delete</label>
          </td>
           <td>
            <%= task[1] %>
           </td>
           <td>
            <%= task[2] %>
           </td>
           <td>
            <%= task[3] %>
           </td>
         </tr>
        <% end %>
      </table>
      <input type="submit" onclick="return confirm('Are you sure?')" name="submit" value="Delete Task(s)">
  </form>
  <a class="list-inline" href="/">Back to Tasks</a>
</div>
